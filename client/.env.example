# Appwrite Configuration
# Copy this file to .env.local and fill in your actual values

# Appwrite endpoint URL
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://appwrite.warricksmith.com/v1

# Appwrite project ID (replace 'racedaytest111' hard-coded references)
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Appwrite API key
APPWRITE_API_KEY=your_api_key_here

# Connection Monitoring (development feature)
# Set to 'true' to enable connection monitoring panel, 'false' or omit to disable
NEXT_PUBLIC_ENABLE_CONNECTION_MONITOR=true

# Polling Configuration
# Set to 'false' to temporarily disable client polling (useful for local debugging)
NEXT_PUBLIC_POLLING_ENABLED=true
# Enable verbose polling diagnostics in the UI and console logs
NEXT_PUBLIC_POLLING_DEBUG_MODE=false
# Request timeout for polling fetches in milliseconds
NEXT_PUBLIC_POLLING_TIMEOUT=10000
# Maximum retry attempts per endpoint before opening the circuit breaker
NEXT_PUBLIC_POLLING_MAX_RETRIES=5
# Background tab polling multiplier (must be >= 1)
NEXT_PUBLIC_BACKGROUND_POLLING_MULTIPLIER=2

# Client-side logging level (DEBUG, INFO, WARN, ERROR, SILENT)
# DEBUG: All logging (development)
# INFO: Info, warnings, and errors (staging)
# WARN: Warnings and errors only
# ERROR: Critical errors only (production)
# SILENT: No logging
NEXT_PUBLIC_LOG_LEVEL=ERROR

